
@{
    ViewBag.Title = "Calificacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos{
    <style>
        #tbdata tbody {
            display: block;
            max-height: 300px;
            overflow: auto;
        }

        #tbdata thead, #tbdata tbody tr {
            display: table;
            width: 100%;
            table-layout: fixed;
        }

        #tbdata tbody {
            width: 100%;
        }

        #tbdata thead {
            width: 99%;
        }
    </style>
}


<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-10">
                        Agregar Curricula
                    </div>
                    <div class="col-md-2">

                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="cboPeriodo">Periodo</label>
                            <select id="cboperiodo" class="form-control"></select>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="cboDocente">Docente</label>
                            <select id="cboDocente" class="form-control"></select>
                        </div>
                    </div>

                </div>
                <hr />

                <div class="row">

                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="cboNivelAcademico">Nivel Academico</label>
                            <select id="cboNivelAcademico" class="form-control"></select>
                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="cboGradoSeccion">Grado Seccion</label>
                            <select id="cboGradoSeccion" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="cboCurso">Curso</label>
                            <select id="cboCurso" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="bg"></label>
                            <button type="button" class="btn btn-info btn-block mt-1" id="btnBuscar" onclick="Buscar()">Buscar</button>
                        </div>
                    </div>

                </div>
                <hr />

                <div class="row">

                    <div class="col-sm-10">
                        <div class="form-group">
                            <label for="cboalumno">Alumno</label>
                            <select id="cboalumno" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label class="bg"></label>
                            <button type="button" class="btn btn-info btn-block mt-1" onclick="VerNotas()">Ver notas</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <div class="table-responsive">
                            <table id="tbdata" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Concepto Calificacion</th>
                                        <th>Nota</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>

                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-success float-right" onclick="GuardarCambios()">Guardar Cambios</button>
            </div>

        </div>

    </div>
</div>


@section scripts{
    <script src="@Url.Content("~/Scripts/Controllers/CalificacionDocente.js")" type="text/javascript"></script>
}



